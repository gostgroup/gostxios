{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "target": "es5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extensions": [".ts", ".tsx", ".js", ".jsx"]
}
